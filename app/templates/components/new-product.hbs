{{#if addNewProduct}}
  <h1>New Product</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description"}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          {{input value=price id="price"}}
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          {{input value=image id="image"}}
        </div>

        <div class="form-group">
          <label for="category">Category</label>
          <select name="category" onchange={{action "updateValue" value="target.value"}}>
            <option value="#" selected="selected" disabled="">Select a Category</option>
            {{#each category-list as |category index|}}
              <option value={{index}} selected={{eq selectedCategory index}}>{{category.title}}</option>
            {{/each}}
          </select>
        </div>
        <button {{action 'saveProduct'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'productFormShow'}}>New Product</button>
{{/if}}
