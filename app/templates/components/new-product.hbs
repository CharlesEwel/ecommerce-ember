{{#if addNewProduct}}
  <h1>New Product</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description"}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          {{input value=price id="price"}}
        </div>
        <button {{action 'saveProduct'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'productFormShow'}}>New Product</button>
{{/if}}
