{{#if addNewRating}}
  <div>
    <form>
      <div class="form-group">
        <label for="score">Score</label>
        {{input value=score id="score"}}
      </div>

      <div class="form-group">
        <label for="comments">Comments</label>
        {{input value=comments id="comments"}}
      </div>
      <button {{action 'saveRating'}}>Save</button>
    </form>
  </div>
{{else}}
    <button {{action 'ratingFormShow'}}>Rate This Product</button>
{{/if}}
